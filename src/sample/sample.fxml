<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets left="10" right="10"/>
    </padding>
    <ComboBox fx:id="cbWithInstantiatedObj" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3"/>

    <ComboBox fx:id="cbWithTypes" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="tf" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button fx:id="btn" text="Create this Object" GridPane.rowIndex="1" GridPane.columnIndex="2" onAction="#btnClicked"/>

    <TextArea fx:id="ta" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="3"/>
        
</GridPane>